<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>IniParser</RootNamespace>
  </PropertyGroup>
  <PropertyGroup>
    <Title>INI Parser</Title>
    <PackageId>ini-parser</PackageId>
    <Version>3.0</Version>
    <Authors>Ricardo Amores Hernández;rickyah</Authors>
    <Description>
      A .NET, Mono and Unity3d compatible(*) library for reading/writing INI data from IO streams, file streams, and
      strings written in C#.

      Also implements merging operations, both for complete ini files, sections, or even just a subset of the keys
      contained by the files.

      (*) This library is 100% .NET code and does not have any dependencies on Windows API calls in order to be
      portable.
    </Description>
    <PackageReleaseNotes>Ported to .NET Standard 2.0.</PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/rickyah/ini-parser</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/rickyah/ini-parser/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/rickyah/ini-parser</RepositoryUrl>
    <PackageTags>ini;parser;netstandard</PackageTags>
    <PackageOutputPath>../nuget</PackageOutputPath>
    <IncludeSymbols>true</IncludeSymbols>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Model\Configuration\ConcatenateDuplicatedKeysIniParserConfiguration.cs" />
    <Compile Remove="Parser\ConcatenateDuplicatedKeysIniDataParser.cs" />
    <Compile Remove="FileIniParser.cs" />
    <Compile Remove="Helpers\Assert.cs" />
    <Compile Remove="Model\Configuration\IniParserConfiguration2.cs" />
  </ItemGroup>
</Project>